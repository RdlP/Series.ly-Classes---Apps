<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="styleBotonAzul" parent="android:Widget.Button">
        <item name="android:background">@drawable/background_boton_azul</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/blanco_hueso</item>
    </style>
    <style name="FondoTransparente" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/background_transparente</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="styleLinearFrontal" parent="android:Widget.ListView">
        <item name="android:background">@drawable/background_blanco_redondeado_abajo</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>
</resources>