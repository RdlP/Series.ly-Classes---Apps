<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/background_azul_mainmenu">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="match_parent" style="@style/styleLinearFrontal">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_marginTop="10dip" android:layout_marginBottom="5dip">
            <LinearLayout android:orientation="vertical" android:id="@+id/linearImagen" android:layout_height="130dip" android:layout_width="87dip" android:background="@drawable/background_blanco_borde_gris_fino" android:gravity="center" android:layout_marginLeft="5dip" android:layout_marginRight="15dip" android:layout_marginTop="5dip" android:layout_marginBottom="5dip"></LinearLayout>
            <ScrollView android:layout_weight="1" android:layout_width="match_parent" android:id="@+id/scrollView1" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout5" android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView android:textColor="@color/font_header" android:id="@+id/titulo" android:text="Cargando..." android:layout_height="wrap_content" android:textSize="17dip" android:marqueeRepeatLimit="marquee_forever" android:focusable="true" android:layout_width="match_parent" android:ellipsize="marquee" android:focusableInTouchMode="true" android:lines="1" android:scrollHorizontally="true"></TextView>
                    <LinearLayout android:layout_width="match_parent" android:background="@drawable/background_azul" android:layout_height="2dip" android:id="@+id/linearLayout4" android:layout_marginTop="3dip" android:layout_marginBottom="3dip"></LinearLayout>
                    <TextView android:textColor="@color/font" android:id="@+id/puntuacion" android:textSize="10dip" android:layout_width="wrap_content" android:text="Cargando..." android:layout_height="wrap_content"></TextView>
                    <TextView android:textColor="@color/font" android:id="@+id/sinopsis" android:textSize="10dip" android:layout_width="wrap_content" android:text="Cargando..." android:layout_height="wrap_content"></TextView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <ExpandableListView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/lista" android:groupIndicator="@drawable/no_drawable" android:divider="#0000" android:childDivider="@drawable/divider_puntos" android:dividerHeight="4dip" android:background="@color/blanco_hueso" android:cacheColorHint="@color/blanco_hueso">
            <!-- Preview: listitem=@layout/row_temporada -->
        </ExpandableListView>
    </LinearLayout>
</LinearLayout>
